@model AgendaEstudiantil.Models.Evento

@{
    ViewData["Title"] = "Details";
}

<h1 style="color: white;  margin-top: 80px;">Detalles</h1>

<div>
    <h4 style="color: white">Evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="color:white">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10" style="color:white">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2" style="color:white">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10" style="color:white">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2" style="color:white">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10" style="color:white">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2" style="color:white">
            Estado
        </dt>
        <dd class="col-sm-10" style="color:white">
            @if (Model.Completado)
            {
                <span class="badge bg-success">Completado</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Pendiente</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" style="color:white">Editar</a> |
    <a asp-action="Index" style="color:white">De vuelta a la lista</a>
</div>
