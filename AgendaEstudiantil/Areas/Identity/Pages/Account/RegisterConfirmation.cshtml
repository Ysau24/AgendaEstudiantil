@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de registro";
}

<h1 class="text-center" style="color: white;  margin-top: 80px;">@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p class="text-center">
            <a id="confirm-link" href="@Model.EmailConfirmationUrl" style="color: white;">Haz clic aquí para confirmar tu cuenta</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}

